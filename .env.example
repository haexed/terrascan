# üåç TERRASCAN ENVIRONMENT VARIABLES
# Copy this to .env and fill in your actual API keys

# API Keys for Data Providers
WORLD_AQI_API_KEY=your_world_aqi_api_key_here
OPENWEATHER_API_KEY=your_openweather_api_key_here
OPENAQ_API_KEY=your_openaq_api_key_here  # Optional - OpenAQ is free
NASA_FIRMS_API_KEY=your_nasa_firms_api_key_here  # Register at https://firms.modaps.eosdis.nasa.gov/api/

# Python Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false
PORT=5000

# System Configuration (optional overrides)
SIMULATION_MODE=false  # Set to true to use simulated data
DEFAULT_TIMEOUT=30
MAX_CONCURRENT_TASKS=5

# Deployment
DEPLOY_ENV=production

# Notes:
# - SQLite database is used (no external database needed!)
# - Keep this file LOCAL only (already in .gitignore)
# - For NASA FIRMS: Register at https://firms.modaps.eosdis.nasa.gov/api/
# - For World AQI: Register at https://aqicn.org/api/
# - OpenAQ is free and doesn't require API keys
